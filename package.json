{
  "name": "ocpp-ws-io",
  "version": "1.0.0",
  "description": "Type-safe OCPP WebSocket RPC client & server with pub/sub, session management, and clustering support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters/redis": {
      "types": "./dist/adapters/redis.d.ts",
      "import": "./dist/adapters/redis.mjs",
      "require": "./dist/adapters/redis.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ocpp",
    "websocket",
    "rpc",
    "ocpp1.6",
    "ocpp2.0.1",
    "ocpp2.1",
    "ev-charging",
    "iot",
    "pubsub",
    "clustering",
    "type-safe"
  ],
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
