{
  "name": "ocpp-ws-io",
  "version": "2.1.5",
  "description": "Type-safe OCPP 1.6 & 2.0.1 WebSocket RPC client & server. Build EV charging CSMS platforms with Redis clustering, strict validation, and DDoS protection.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohittiwari-dev/ocpp-ws-io.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters/redis": {
      "types": "./dist/adapters/redis.d.ts",
      "import": "./dist/adapters/redis.mjs",
      "require": "./dist/adapters/redis.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.mjs",
      "require": "./dist/browser.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "import": "./dist/logger.mjs",
      "require": "./dist/logger.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "generate": "node scripts/generate-types.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ocpp",
    "ocpp-j",
    "ocpp1.6",
    "ocpp1.6j",
    "ocpp2.0.1",
    "ocpp2.1",
    "websocket",
    "rpc",
    "json-rpc",
    "ev-charging",
    "evse",
    "csms",
    "cpo",
    "emsp",
    "charge-point",
    "charging-station",
    "charge-point-simulator",
    "smart-charging",
    "electric-vehicle",
    "e-mobility",
    "iso15118",
    "type-safe",
    "typescript",
    "nodejs",
    "redis",
    "clustering",
    "pubsub",
    "browser",
    "react-native"
  ],
  "author": "Rohit Tiwari <rohit@rohittiwari.me>",
  "homepage": "https://ocpp-ws-io.rohittiwari.me",
  "bugs": {
    "url": "https://github.com/rohittiwari-dev/ocpp-ws-io/issues"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "^3.3.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "voltlog-io": "^1.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "ioredis-mock": "^8.13.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
